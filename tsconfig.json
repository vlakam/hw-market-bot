{
    "compilerOptions": {
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es2020",
      "lib": ["es2020"],
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "types": ["node"],
      "stripInternal": true,
      "esModuleInterop": true,
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
  }